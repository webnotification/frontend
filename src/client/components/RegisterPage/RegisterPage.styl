@import 'variables'

.RegisterPage
  display flex
  flex-basis 64vw
  align-items center
.RegisterPage-container
  margin 0 auto
  padding 40px
  align-self center


.RegisterPage
  .form-container
    flex-container column
  .form-field
    display block
    margin-bottom 20px
  .form-loading
    flex 1
    align-self center

  .login-password
    margin-bottom 40px

  .link-register
    margin-top 20px
    text-decoration none
    font-weight lighter

